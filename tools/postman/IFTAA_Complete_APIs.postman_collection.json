                {
                    "name": "Login (Get JWT Token)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.token) {",
                                    "        pm.environment.set('jwt_token', response.token);",
                                    "        pm.environment.set('username', response.username);",
                                    "        pm.environment.set('user_role', response.role);",
                                    "        console.log('üîë JWT Token saved successfully');",
                                    "        console.log('üë§ Username:', response.username);",
                                    "        console.log('üè∑Ô∏è Role:', response.role);",
                                    "    }",
                                    "} else {",
                                    "    console.log('‚ùå Login failed');",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
